---
interface Props {
    videoId?: string;
    fullWidth?: boolean;
}

const { videoId, fullWidth = false }: Props = Astro.props;
---
<div class="youtube-video-container" style={`width: ${fullWidth ? '100%' : '50%'}; border:0;`}>
    <iframe src={`https://www.youtube.com/embed/${videoId}`} allow="picture-in-picture" allowfullscreen></iframe>
</div>
<style>
    .youtube-video-container{
        width: 50%;
        height: 20rem;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    iframe{
        width: 100%;
        border:0;
        height: 100%;
    }
</style>