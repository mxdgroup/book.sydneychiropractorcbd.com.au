---
interface Props {
    text: string;
    href?: string;
    centerText?: boolean;
}

const { text, href, centerText } = Astro.props;
---
{
    href ? (
        <a href="tel:0280597743" target="_blank" class="primary-button" style={centerText ? "text-align: center;" : ""}>
            {text}
        </a>
    ) : (
        <button class="primary-button" style={centerText ? "text-align: center;" : ""}>
            {text}
        </button>
    )
}
<style>
    .primary-button {
        display: inline-block;
        background: var(--primary-pink);
        color: white;
        padding: 0.8rem 1.5rem;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: background-color 0.3s ease;
        border: none;
        cursor: pointer;
        text-transform: capitalize;
        z-index: 1;
        position: relative;
    }
    .primary-button:hover {
        background: rgb(181, 48, 94);
    }

    @media (max-width: 480px) {
        .primary-button {
            font-size: 0.8rem;
            width: 100%;
        }
    }

    @media (max-height: 768px) {
        .primary-button {
            font-size: 0.6rem;
            width: 60%;
            height: fit-content;
        }
    }

    @media (max-height: 400px) {
        .primary-button {
            font-size: 0.4rem;
            width: 60%;
            height: fit-content;
        }
    }
</style>