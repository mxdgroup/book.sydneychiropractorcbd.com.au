---
import Ratings from "./reusable/Ratings.astro";
---

<section class="hero">
  <div class="overlay"></div>
  <div class="container">
    <div class="hero-content">
      <h1>
        Achieve Optimal Health, Happiness<br />
        and Your Full Human Potential
      </h1>
      <Ratings />

      <ul class="features">
        <li>• Over 30 years of chiropractic experience</li>
        <li>• Just minutes from where you live or work</li>
        <li>• Long-term solution to pain and discomfort with Advanced Biostructural Correction</li>
      </ul>

      <a href="tel:0280597743" target="_blank" class="cta-button">
        Call Us to Take the First Step
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 20vh;
    background-image: url("https://d9hhrg4mnvzow.cloudfront.net/book.sydneychiropractorcbd.com.au/bcd5ad07-shutterstock-1793070016-1_1000000000000000000028.png");
    background-size: cover;
    background-position: center;
    color: white;
    padding: 1rem 0;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.1);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  h1 {
    font-size: 2.3rem;
    margin-bottom: 2rem;
    font-weight: 800;
  }

  .features {
    list-style: none;
    margin-bottom: 2rem;
  }

  .features li {
    margin-bottom: 0.6rem;
    font-size: 1rem;
  }

  .cta-button {
    display: inline-block;
    background: var(--purple);
    color: white;
    padding: 1rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: background-color 0.3s ease;
    width: 40%;
    text-align: center;
  }

  .cta-button:hover {
    background: #10164f;
    cursor: pointer;

  }

  @media (max-width: 768px) {
    .hero {
      padding: 2rem 0;
    }

    h1 {
      font-size: 2rem;
    }

    .features li {
      font-size: 1rem;
    }

    .cta-button {
      font-size: 1rem;
      padding: 0.75rem 1.5rem;
    }
  }
</style>
