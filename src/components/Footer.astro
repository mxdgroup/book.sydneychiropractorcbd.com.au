---
import PrimaryButton from './reusable/PrimaryButton.astro';
---
<footer>
    <div class="footer-container">
        <div class="footer-content">
            <div class="logo-circle">
            </div>
            <p class="footer-text">
                Get in touch with us and find out why
                so many patients stay with us for years
                (and even decades!)
            </p>
            <div class="footer-button-container">
                <PrimaryButton text="Call us today" href="tel:0280597743" centerText={true} />
            </div>
        </div>
    </div>
</footer>
<style>
    .footer-container{
        background-image: url('/footer_bg.png');
        background-size: cover;
        background-position: center;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 40vh;
        height: auto;
        padding: 3rem 1rem;
        width: 100%;
    }
    
    .footer-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: clamp(2rem, 4vw, 5rem);
        width: 100%;
        max-width: 1200px;
        text-align: center;
    }
       
    .footer-text{
        width: 100%;
        max-width: 600px;
        color: white;
        font-size: clamp(1rem, 1.5vw, 1.2rem);
        font-weight: 600;
        text-align: center;    
        margin: 0 auto;
    }
    
    .footer-button-container {
        width: 100%;
        max-width: 250px;
        margin: 0 auto;
    }

    /* Large screens */
    @media (min-width: 1200px) {
        .footer-container {
            height: 60vh;
        }
        .footer-content {
            gap: 5rem;
        }
        .footer-text {
            width: 30%;
            font-size: 1.2rem;
        }
    }

    /* Medium screens (tablets) */
    @media (min-width: 768px) and (max-width: 1199px) {
        .footer-container {
            height: 50vh;
        }
        .footer-content {
            gap: 3rem;
        }
        .footer-text {
            width: 50%;
            font-size: 1.1rem;
        }
    }

    /* Small screens (larger mobile) */
    @media (min-width: 481px) and (max-width: 767px) {
        .footer-container {
            height: 45vh;
        }
        .footer-content {
            gap: 2.5rem;
        }
        .footer-text {
            width: 70%;
            font-size: 1rem;
        }
    }

    /* Extra small screens (small mobile) */
    @media (max-width: 480px) {
        .logo-circle{
            width: 100px;
            height: 100px;
        }
        .footer-container{
            height: 35vh;
        }
        .footer-content {
            gap: 2rem;
        }
        .footer-text{
            width: 85%;
            font-size: 0.9rem;
        }
    }
</style>