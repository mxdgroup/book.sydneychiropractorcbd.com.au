---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Clinic 27 - Your Path to Optimal Health and Wellness" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
		<style is:global>
			:root {
				--primary-blue: rgb(0, 86, 179);
				--primary-pink: rgba(223,47,109);
				--purple : rgb(32,32,137);
			}
			
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			html {
				font-family: 'Inter', system-ui, sans-serif;
				background: #ffffff;
			}

			body {
				min-height: 100vh;
			}

			img {
				max-width: 100%;
				height: auto;
			}

			.container {
				max-width: 60%;
				margin: 0 auto;
				padding: 1rem 1rem;
			}

			button{
				border: none;
				cursor: pointer;
			}

			@media (max-width: 480px) {
				.container{
					max-width: 100%;
					margin: 0 auto;
					padding: 1rem 1rem;
				}
			}

		</style>
	</body>
</html>
